# Assign aliases for displays

set $mon27 DP-2
set $mon32 DP-0
 
 # Set 27in monitor to 144Hz
exec xrandr --output $mon27 --mode 2560x1440 --rate 144

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        tray_output primary
        status_command exec ~/.config/i3status/net-speed.sh config-desktop
        # $i3-theme-bar
}

# Create screen lock hotkey
bindsym Mod4+l exec dm-tool switch-to-greeter

# Set up layout
# exec --no-startup-id "i3-msg 'workspace 10:util; append_layout ~/.config/i3/32in-layout.json'"
assign [class="^discord$"] $ws9
assign [class="^KeePassXC$"] $ws10

