# Assign aliases for displays
set $mon27 DP-4
set $mon32 DP-2
 
 # Configre display placement
exec xrandr --output $mon27 --mode 2560x1440 --rate 165 --pos 0x400 --primary --output $mon32 --mode 3840x2160 --rate 60 --pos 2560x0

# Start i3bar to display a workspace bar
bar {
        tray_output primary
        status_command exec ~/.config/i3status/net-speed.sh config-desktop
        # $i3-theme-bar
}

# Set up layout
assign [class="^discord$"] $ws9
assign [class="^KeePassXC$" window_type="normal"] $ws10

# Tray & background programs
exec --no-startup-id nextcloud
exec --no-startup-id protonmail-bridge --no-window
exec --no-startup-id autotiling
exec --no-startup-id pasystray
exec --no-startup-id lxpolkit
exec --no-startup-id nitrogen --restore
exec --no-startup-id redshift-gtk
exec --no-startup-id pacman -Qqe > ~/nc-small/Backups/Config/pacman/pallene.pkglist
exec --no-startup-id nmapplet